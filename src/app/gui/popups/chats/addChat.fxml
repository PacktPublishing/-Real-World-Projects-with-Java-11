<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="chatStatus" text="With whom would you like to chat?" />
      <TextField fx:id="user" promptText="Destination user" />
      <HBox>
         <children>
            <Button fx:id="create" maxWidth="Infinity" mnemonicParsing="false" text="Create" HBox.hgrow="ALWAYS" />
            <Button fx:id="cancel" maxWidth="Infinity" mnemonicParsing="false" text="Cancel" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
